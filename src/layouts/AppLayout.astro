---
/**
 * AppLayout
 * Main layout for authenticated application pages
 * Note: Header and AuthProvider are now in AppContent component (React)
 */
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "WineLog - Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>

