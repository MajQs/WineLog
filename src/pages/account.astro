---
/**
 * Account Settings Page
 * Allows users to view and manage their account settings
 */
import AppLayout from "@/layouts/AppLayout.astro";
import { AppContent } from "@/components/AppContent";
import { AccountSettings } from "@/components/auth/AccountSettings";
---

<AppLayout title="Ustawienia konta - WineLog">
  <AppContent client:load>
    <div class="container mx-auto px-4 py-6 md:py-8">
      <div class="max-w-2xl mx-auto">
        <div class="mb-8">
          <h1 class="text-2xl font-bold md:text-3xl">Ustawienia konta</h1>
          <p class="text-muted-foreground mt-2">
            Zarządzaj swoim kontem i ustawieniami prywatności
          </p>
        </div>

        <AccountSettings client:load />
      </div>
    </div>
  </AppContent>
</AppLayout>

