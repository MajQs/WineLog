---
/**
 * Reset Password Page
 * Allows users to set a new password using a reset token from email
 */
import AuthLayout from "@/layouts/AuthLayout.astro";
import { ResetPasswordFormWithProvider } from "@/components/auth";

// Get the token from URL params
const { token } = Astro.params;

// Validate token exists
if (!token) {
  return Astro.redirect("/forgot-password");
}
---

<AuthLayout title="Resetuj hasÅ‚o - WineLog">
  <ResetPasswordFormWithProvider token={token} client:load />
</AuthLayout>
