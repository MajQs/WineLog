---
import AppLayout from "@/layouts/AppLayout.astro";
import { AppContent } from "@/components/AppContent";
import ArchivedBatchView from "@/components/ArchivedBatchView";

// Get batch ID from URL params
const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/archived");
}
---

<AppLayout title="Archiwum - WineLog">
  <AppContent client:load>
    <ArchivedBatchView client:load batchId={id} />
  </AppContent>
</AppLayout>



